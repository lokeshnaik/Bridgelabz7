package com.bridgelabz.algorithmprograms;

import com.bridgelabz.utility.Utility;
import com.bridgelabz.utility.UtilityScanner;
/**
 * TemperaturConversion:As given the temperature
 *in fahrenheit as input outputs the temperature in Celsius or viceversa using the
 *formula
 *@author LOKESH NAIK
 * */
public class TemperatureConversion {

	public static void main(String[] args)
	{
		
		System.out.println("Choose the option in between 1 and 2: ");
		System.out.println("1.Celsius to Fahrenhiet ");
		System.out.println("2.Fahrenhiet to Celsius");
        int option=UtilityScanner.integerInput(); //Taking integer input as option to the user to choose the method conversion
        
        Utility.temperatureConversion(option);   //Passing the option as argument in temperatureConversion of utility class

	}

}
