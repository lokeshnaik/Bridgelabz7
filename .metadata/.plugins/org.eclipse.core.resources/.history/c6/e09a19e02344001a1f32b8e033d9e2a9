package programs;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

public class example {

	public static void main(String args[]) {
		example e = new example();
		e.fetch();
	}

	public void fetch()

	{
		BufferedReader br = null;
		FileReader fr = null;
		int i;
		try {
			fr = new FileReader(
					"/home/bridgelabz/eclipse-workspace/BridgeLabz7/FellowshipPrograms/src/programs/simple.txt");
			br = new BufferedReader(fr);
			while ((i = br.read()) != -1) {
				System.out.print((char) i);
			
			}
		} catch (FileNotFoundException e) {

			e.printStackTrace();
		} catch (IOException e) {

			e.printStackTrace();
		}
		try {
			br.close();
		} catch (IOException e) {
	
			e.printStackTrace();
		}
		try {
			fr.close();
		} catch (IOException e) {
	
			e.printStackTrace();
		}

	}

}
