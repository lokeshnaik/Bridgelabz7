public class firstclass
{
	public static void main(String [] args) throws Exception
	{
		Runnable obj1=()->
		{
			int i;
			for(i=0;i<5;i++)
			{
				System.out.print("Hey Lokesh ");
				try 
				{
					Thread.sleep(1000);
				}
				catch(Exception e)
				{
					
				}
			}
		};
		Runnable obj2=()->
		{
			int i;
			for(i=0;i<5;i++)
			{
				System.out.println("stay in your limits");
				try 
				{
					Thread.sleep(1000);
				}
				catch(Exception e)
				{
					
				}
			}
		};
		Thread t1=new Thread(obj1);
		Thread t2=new Thread(obj2);
		
		t1.start();
		try
		{
			Thread.sleep(1000);
		}
		catch(Exception e)
		{
			
		}
		System.out.println(t2.isAlive());
		t2.start();
		
		t1.join();
		t2.join();
		
		System.out.println("Just crack the fellowship Lokesh");
		
	}
}