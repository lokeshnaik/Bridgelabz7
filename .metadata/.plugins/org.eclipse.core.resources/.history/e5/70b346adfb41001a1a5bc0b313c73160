package bridgelabz2;



import java.util.Scanner;

public class lokesh
{
    public static void main(String[] args)
    {
        
        System.out.println("Enter the values of  $Stake");
        Scanner scanner=new Scanner(System.in);
        int Stake1=scanner.nextInt();
        System.out.println("Enter the values of  $Goal");
        Scanner scanner1=new Scanner(System.in);
        int Goal=scanner1.nextInt();
        System.out.println("Enter  number of times game to be played");
        Scanner scanner2=new Scanner(System.in);
        int N=scanner2.nextInt();
        int cash=Stake1;
        float i,bets=0,win=0,loss=0;
		float k=0;
		
            for(i=0;i<N;i++)
        {
           
            bets++;
          k=(float)(Math.random()*1);
          if(k>0.5)
           {
              cash++;
              win++;
           }
          else
           {
              cash--;
              loss++;
           }
          if(cash==0||cash==Goal)
          {
       	   break;
          }
         }
            
        
        System.out.println("Number of times won are:"+win);
		System.out.println("Win percentage is:"+((float)((win/bets)*100)));
        System.out.println("Loss percentage is:"+((float)((loss/bets)*100)));
    }
}