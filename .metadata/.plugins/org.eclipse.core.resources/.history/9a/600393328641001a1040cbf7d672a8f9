package com.bridgelabz.algorithmprograms;

import com.bridgelabz.utility.Utility;
import com.bridgelabz.utility.UtilityScanner;

public class BubbleSort {

	public static void main(String[] args) 
	{
		System.out.println("Enter no of integer you want to sort in an array:");
	   	 int number=UtilityScanner.integerInput();
	   	 int []array=new int[number];
	        int i;
	        System.out.println("Enter the array elements:");
	        for(i=0;i<number;i++)
	        {
	       	 array[i]=UtilityScanner.integerInput();
	        }
	        Utility.bubbleSorting(array,number);
	        
   		

	}
	public static void display(int array[],int number)
	{
		int i;
		 for(i=0;i<number;i++)
		 {
			 System.out.print(array[i]+" ");
		 }
	}

}
